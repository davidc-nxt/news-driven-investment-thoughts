# Database Configuration
# Option 1: Docker pgvector (recommended)
DATABASE_URL=postgresql://advisor:advisor_secret@localhost:5434/investment_advisor
# Option 2: Local PostgreSQL (requires pgvector extension installed)
# DATABASE_URL=postgresql://user:password@localhost:5432/your_database

# OpenRouter API for LLM (get your key at https://openrouter.ai)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Embedding Settings
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Settings (OpenRouter model)
LLM_MODEL=openai/gpt-4o-mini

# Logging
LOG_LEVEL=INFO
